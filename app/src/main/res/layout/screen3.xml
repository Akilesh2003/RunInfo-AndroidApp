<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run History"
        android:textSize="30dp"
        android:id="@+id/historyTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAllHistory"
        android:text="Delete All"
        app:layout_constraintTop_toBottomOf="@id/historyTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/deleteAllHistory"
        app:layout_constraintBottom_toTopOf="@id/left"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/runHistoryLayout"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"/>

    </ScrollView>
    <Button
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:id="@+id/left"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </Button>
    <Button
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:id="@+id/listMode"
        android:text="Timer"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/left"
        >
    </Button>

    <Button
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:id="@+id/right"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/listMode"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>